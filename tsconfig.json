{
    "compilerOptions": {
        "baseUrl": ".",
        "module": "commonjs",
        "lib": [ "es2016", "es2018.promise" ],
        "noImplicitAny": false,
        "removeComments": true,
        "preserveConstEnums": true,
        "outDir": "dist",
        "sourceMap": true,
        "declaration": true,
        "target": "es5"
    },
    "include": [
        "lib/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}
